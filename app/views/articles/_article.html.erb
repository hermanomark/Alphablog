<% obj.each do | article | %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg my-article">
        <div class="article-title">
          <%= link_to article.title, article_path(article) %>
        </div>
        <div class="article-body">
          <!-- truncating the description -->
          <%= truncate(article.description, length: 100) %>
          <div class="article-meta-details">
            <small>Created by: <%= article.user.username if article.user %>,
                    <%= time_ago_in_words(article.created_at) %> ago,
                    last updated: <%= time_ago_in_words(article.updated_at) %> ago </small>
          </div>
        </div>
        <div class="article-actions">
          <!-- over here give the article object, we're iterating over the @articles so we should only use article -->
          <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-xs btn-primary" %>
          <!-- the path is very similar to show so you have to code the method delete, also adding the data for confirmation -->
          <%= link_to "Delete this article", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete the article?" }, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>