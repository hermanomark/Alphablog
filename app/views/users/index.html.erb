<h1 align="center">All Alpha Bloggers</h1>
<div class="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well">
          <li><%= link_to gravatar_for(user), user_path(user), size: 300 %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <!-- we want pluralize if the user has article/articles, and don't display if none -->
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want todelete the user and all their articles?" } %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>